<div class="masthead  masthead--with-image">
  <div class="masthead__inner">
    <div class="masthead__bg">
      {% if bgImg %}
        {{ bgImg }}
      {% else %}
        <img src="{{ ('/images/masthead-knot.svg') | path }}"/>
      {% endif %}
    </div>
    <div class="wrap">
      <div class="grid">
        <div class="col-2/3@tablet">
          {% include '@title' with {
            text: 'Undergraduate courses',
            textElement: 'h1',
            textElementStyle: 'h1',
            animate: true
          } %}
          {% include '@title' with {
            text: '(If long, consider using h2 textElementStyle)',
            textElement: 'h6',
            animate: true
          } %}
        </div>
        <div class="col-1/3@tablet">
          <img class="masthead__img" src="{{ ('/images/masthead-square-0.jpg') | path }}" alt="" />
        </div>
      </div>  
    </div>
  </div>
</div>

<div class="wrap">
  {% include '@breadcrumbs' %}
</div>

<hr />

