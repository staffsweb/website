{{ spaceless }}
{% set classString = '' %}
{% for modifier in modifiers %}
  {% set classString = classString ~ '  slab--' ~ modifier %}
{% endfor %}
{% if background %}
  {% set classString = classString ~ '  slab--bg-' ~ background %}
{% endif %}

<div class="slab{{ classString }}">
  <div class="wrap">
    <h2 class="h3 slab__title">{{ text }}</h2>
    {% if usageNote %}
      <p><em>{{usageNote}}</em></p>
    {% endif %}
    <p>{{ loremLong }}</p>
  </div>
</div>
{{ endspaceless }}



